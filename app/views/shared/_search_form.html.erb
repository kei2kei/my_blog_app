<%= search_form_for @q, class: "flex w-full justify-center items-end", url: root_path do |f| %>
  <div class="relative mr-4 lg:w-full xl:w-1/2 w-2/4 md:w-full text-left">
    <%= f.label :title_or_content_or_tags_name_cont, "タイトルやタグ、本文からみんなの学習記録を検索できます。",
                class: "leading-7 text-sm text-terminal-text" %>
    <%= f.search_field :title_or_content_or_tags_name_cont, 
                       class: "w-full bg-terminal-input bg-opacity-50 rounded focus:ring-2 focus:ring-terminal-accent/50 focus:bg-transparent border border-terminal-border focus:border-terminal-accent text-base outline-none text-terminal-text py-1 px-3 leading-8 transition-colors duration-200 ease-in-out" %>
  </div>
  <%= f.submit "検索", class: "inline-flex text-base bg-terminal-accent text-terminal-bg font-bold border-0 py-2 px-6 focus:outline-none cursor-pointer rounded text-lg" %>
<% end %>