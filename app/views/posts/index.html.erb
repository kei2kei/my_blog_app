<section class="relative isolate h-[60vh] min-h-[420px] bg-terminal-bg text-terminal-text overflow-hidden">
  <div class="absolute inset-0 pointer-events-none"
       style="background: radial-gradient(60% 60% at 50% 50%, rgba(0,255,127,.06), transparent 65%);"></div>

  <div class="absolute inset-0 flex flex-col items-center justify-center">
    <% if current_user && current_user.cat %>
      <div class="relative w-full text-center">
        <div class="cat-sprite-base mx-auto mb-4"
             data-controller="cat-animator"
             data-cat-animator-level-value="<%= current_user.cat.level %>"
             data-cat-animator-color-value="<%= current_user.cat.color %>">
        </div>
        <h2 class="text-xl md:text-2xl font-bold mt-4">
          <%= current_user.name %>さんの猫
        </h2>
        <div class="mt-2 flex justify-center items-center space-x-4">
          <p class="text-lg">レベル: <span class="font-bold text-terminal-accent"><%= current_user.cat.level %></span></p>
          <p class="text-lg">ポイント: <span class="font-bold text-terminal-accent"><%= current_user.points %></span> pts</p>
        </div>
      </div>
    <% end %>
  </div>

  <div class="relative z-10 container mx-auto px-6 text-center">
    <h1 class="text-3xl md:text-5xl font-bold">wakannyai</h1>
    <p class="mt-4 text-base md:text-lg text-terminal-text">
      つまずきを共有して、助け合うプログラミングQ&Aプラットフォーム
    </p>
  </div>
</section>
<section class="text-terminal-text body-font bg-terminal-bg">
  <div class="container px-5 pt-16 pb-24 mx-auto flex flex-col justify-center items-center">
    <div class="w-full md:w-2/3 flex flex-col items-center text-center">
      <%= render 'shared/search_form' %>
    </div>
    <div class="w-full md:w-2/3 flex flex-col items-center text-center">
      <p class="text-2xl mt-8 text-terminal-text mb-8 w-full">あなたの学習記録</p>
    </div>

    <div class="flex flex-col space-y-4 w-full">
      <% @posts.each do |post| %>
        <div class="w-full">
          <div class="group relative p-4 border-2 border-terminal-border bg-terminal-input hover:bg-terminal-border transition-colors duration-200">
            <div class="flex items-center justify-between">
              <h1 class="text-terminal-accent text-lg font-medium"><%= link_to post.title, post_path(post), class: "group-hover:text-white transition-colors" %></h1>
              <% if post.status == 'solved' %>
                <span class="text-terminal-text bg-green-500/20 px-2 py-1 rounded text-xs font-semibold">解決済み</span>
              <% else %>
                <span class="text-terminal-text bg-red-500/20 px-2 py-1 rounded text-xs font-semibold">未解決</span>
              <% end %>
            </div>
            <div class="flex justify-between items-center mt-2 text-sm text-terminal-text">
              <p><%= post.content[0,50] %>...</p>
              <div class="text-xs text-gray-400">
                <span>By <%= post.user.name %></span>
                <span>・</span>
                <span><%= post.tags.map(&:name).join(',') %></span>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8 flex justify-center">
      <%= paginate @posts, theme: 'bootstrap-5' %>
    </div>
  </div>
</section>