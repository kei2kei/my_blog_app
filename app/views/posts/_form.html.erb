  <%= form_with model: post do |f| %>
    <%= f.label :thumbnail, "サムネイル画像" %>
    <%= f.file_field :thumbnail %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :content %>
    <%= f.text_area :content %>
    <div data-controller="tag-manager" data-tag-manager-search-url="<%= tags_search_path %>">
      <%= f.label :tag_names, "タグ" %>
      <div data-tag-manager-target="tagListContainer" >
      </div>
      <%= f.text_field :tag_input, data: { "tag-manager-target": "input", action: "input->tag-manager#searchTags blur->tag-manager#addTagFromInput" }, placeholder: "新たなタグを入力" %>
      <select id="tagList" data-tag-manager-target="searchResult" data-action="change->tag-manager#selectTag" >
      </select>
      <%= f.hidden_field :tag_names, data: { "tag-manager-target": "hiddenInput" }, value: post.tags.map(&:name).join(', ')%>
    </div>
    <%= f.submit post.new_record? ? '投稿する' : '更新する' %>
  <% end %>
